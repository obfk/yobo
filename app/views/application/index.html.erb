<% if @master %>

  <hr />

  <section class=<%= @master['outcome'] %>>
    <h2>
      TF / <%= @master['branch'] %>
    </h2>

    <h3>
      <% if @master['all_commit_details'].length > 0 %>
        <%= @master['all_commit_details'].first['committer_name']%>
        <em> and </em>
        <%= @master['all_commit_details'].first['author_name']%>
      <% end %>
    </h3>
    <% if @master['stop_time'] %>
      <h4><em><%= time_ago_in_words(@master['stop_time']) %></em></h4>
    <% else %>
      <h4><em>building...</em></h4>
    <% end %>
  </section>

  <hr />

<% end %>

<% if @recent %>
  <% @recent.each do |recent| %>
    <section class=<%= recent['outcome'] %>>
      <h2>
        TF / <%= recent['branch'] %>
      </h2>

      <h3>
        <% if recent['all_commit_details'].length > 0 %>
          <%= recent['all_commit_details'].first['committer_name']%>
          <em> and </em>
          <%= recent['all_commit_details'].first['author_name']%>
        <% end %>
      </h3>
      <% if recent['stop_time'] %>
        <h4><em><%= time_ago_in_words(recent['stop_time']) %></em></h4>
      <% else %>
        <h4><em>building...</em></h4>
      <% end %>
    </section>
  <% end %>

  <script type="text/javascript">
    setTimeout(function(){
      location = ''
    }, 30000)
  </script>

<% else %>
  <h3>enter a token</h3>
<% end %>
